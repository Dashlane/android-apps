<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dashlane.Transparent" parent="Theme.Dashlane.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.Dashlane.Transparent.NoAnimation">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.Dashlane.Transparent.Cancelable">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Theme.Dashlane.Transparent.Modal" parent="Theme.Dashlane.Transparent">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.Dashlane.Transparent.Modal.NoAnimation" parent="Theme.Dashlane.Transparent.Modal">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>