<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.dashlane.ui.widgets.view.ExpandableCardView
        android:id="@+id/vpn_third_party_question_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        app:arrow="@id/collapse_arrow"
        app:expandableLayout="@layout/item_vpn_third_party_question_1"
        app:headerLayout="@layout/header_vpn_third_party_question_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll"
        />

    <com.dashlane.ui.widgets.view.ExpandableCardView
        android:id="@+id/vpn_third_party_question_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:foreground="?selectableItemBackground"
        app:arrow="@id/collapse_arrow"
        app:expandableLayout="@layout/item_vpn_third_party_question_2"
        app:headerLayout="@layout/header_vpn_third_party_question_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vpn_third_party_question_1"
        app:layout_scrollFlags="scroll"
        />

    <com.dashlane.ui.widgets.view.ExpandableCardView
        android:id="@+id/vpn_third_party_question_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:foreground="?selectableItemBackground"
        app:arrow="@id/collapse_arrow"
        app:expandableLayout="@layout/item_vpn_third_party_question_3"
        app:headerLayout="@layout/header_vpn_third_party_question_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vpn_third_party_question_2"
        app:layout_scrollFlags="scroll"
        />
</androidx.constraintlayout.widget.ConstraintLayout>