<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fab_menu_items_scroller"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:layout_marginRight="@dimen/fab_menu_margin_right"
    android:layout_marginBottom="@dimen/fab_menu_margin_bottom"
    android:fillViewport="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/fab_menu_items_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:gravity="right"
        android:orientation="vertical"
        >

        
        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            />

        <include
            android:id="@+id/fab_menu_item_credit_card"
            layout="@layout/include_fab_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <include
            android:id="@+id/fab_menu_item_bank_account"
            layout="@layout/include_fab_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>