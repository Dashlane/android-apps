<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dashlane="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:minHeight="@dimen/list_sharing_item_content_min_height"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/list_sharing_item_content_icon_width"
        android:layout_height="@dimen/list_sharing_item_content_icon_height"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:importantForAccessibility="no"
        android:scaleType="fitCenter"
        dashlane:layout_constraintBottom_toBottomOf="parent"
        dashlane:layout_constraintStart_toStartOf="parent"
        dashlane:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_line1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:textAppearance="?textAppearanceSubtitle1"
        dashlane:layout_constraintEnd_toStartOf="@+id/action"
        dashlane:layout_constraintStart_toEndOf="@+id/icon"
        dashlane:layout_constraintTop_toTopOf="@+id/icon"
        dashlane:layout_goneMarginEnd="@dimen/spacing_normal"
        tools:text="Behance"
        />

    <TextView
        android:id="@+id/item_line2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="@color/text_neutral_quiet"
        dashlane:layout_constraintEnd_toEndOf="@+id/item_line1"
        dashlane:layout_constraintStart_toStartOf="@+id/item_line1"
        dashlane:layout_constraintTop_toBottomOf="@+id/item_line1"
        tools:text="randomemail@provider.com"
        />

    <ImageButton
        android:id="@+id/action"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@null"
        android:contentDescription="@string/and_accessibility_action_menu"
        android:gravity="center"
        android:padding="@dimen/spacing_small"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_item_action_more"
        dashlane:layout_constraintBottom_toBottomOf="parent"
        dashlane:layout_constraintEnd_toEndOf="parent"
        dashlane:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>