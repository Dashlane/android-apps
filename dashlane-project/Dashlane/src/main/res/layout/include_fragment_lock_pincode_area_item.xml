<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="@dimen/fragment_lock_pincode_pin_area_item_height"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_weight="1"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/dot"
        android:layout_width="@dimen/fragment_lock_pincode_pin_area_item_dot_size"
        android:layout_height="@dimen/fragment_lock_pincode_pin_area_item_dot_size"
        android:layout_centerInParent="true"
        android:src="@drawable/background_circle"
        app:tint="@color/text_brand_quiet"
        />

    <View
        android:id="@+id/dot_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>